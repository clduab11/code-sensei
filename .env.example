# GitHub App Configuration
GITHUB_APP_ID=your_app_id
GITHUB_PRIVATE_KEY_PATH=./private-key.pem
GITHUB_WEBHOOK_SECRET=your_webhook_secret
GITHUB_CLIENT_ID=your_client_id
GITHUB_CLIENT_SECRET=your_client_secret

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key
CLAUDE_MODEL=claude-opus-4-20250514

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/code_sensei
REDIS_URL=redis://localhost:6379
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=code_sensei

# Database SSL Configuration
# DB_SSL: Enable/disable SSL for database connections (true/false)
# In production, SSL is enabled by default
DB_SSL=true
# DB_SSL_REJECT_UNAUTHORIZED: Verify SSL certificate (true/false)
# Defaults to true in production. Set to false only for self-signed certs or
# cloud providers that don't support full certificate verification
DB_SSL_REJECT_UNAUTHORIZED=true
# DB_SSL_CA_PATH: Path to custom CA certificate file (optional)
# DB_SSL_CA_PATH=/path/to/ca-certificate.crt

# Security
JWT_SECRET=your_jwt_secret
SESSION_SECRET=your_session_secret

# Integrations
SLACK_BOT_TOKEN=xoxb-your-token
SLACK_SIGNING_SECRET=your_signing_secret
SLACK_DEFAULT_CHANNEL=#code-reviews
JIRA_HOST=your_company.atlassian.net
JIRA_EMAIL=your_email
JIRA_API_TOKEN=your_jira_token
LINEAR_API_KEY=your_linear_api_key

# Snyk Security Scanning
SNYK_TOKEN=your_snyk_token

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_AUTO_FIX=true
ENABLE_AUTO_MERGE=false
ENABLE_SECURITY_SCAN=true
ENABLE_LEARNING=true

# Pricing Tiers
TIER_FREE_MAX_REPOS=3
TIER_PRO_PRICE=19
TIER_ENTERPRISE_CUSTOM=true
